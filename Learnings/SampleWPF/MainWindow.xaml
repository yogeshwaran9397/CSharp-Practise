<Window x:Class="SampleWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SampleWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Click To Show All Directory" HorizontalAlignment="Center" 
                Margin="0,70,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.218,0.449" Command="{Binding SampleMethod}"/>
        <TextBox x:Name="viewDirecArea" HorizontalAlignment="Left" Margin="108,136,0,0" TextWrapping="Wrap"
                 Text="" VerticalAlignment="Top" Width="602" Height="195" TextChanged="TextBox_TextChanged"/>
    </Grid>
</Window>
